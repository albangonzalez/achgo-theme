{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"gradients": [
				{
					"gradient": "linear-gradient(45deg, #6393A5, #275674)",
					"name": "ACHGO",
					"slug": "achgo"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#275674",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#6393a5",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#6393a5",
					"name": "Blue",
					"slug": "blue"
				},
				{
					"color": "#f9fcfd",
					"name": "Light Blue 1",
					"slug": "light-blue-1"
				},
				{
					"color": "#ecf3f6",
					"name": "Light Blue 2",
					"slug": "light-blue-2"
				},
				{
					"color": "#f45c24",
					"name": "Orange",
					"slug": "orange"
				}
			]
		},
		"layout": {
			"contentSize": "900px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [ "file:./assets/fonts/Poppins-Light.woff2" ]
						},
						{
							"fontFamily": "Poppins",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [ "file:./assets/fonts/Poppins-Regular.woff2" ]
						}
					],
					"fontFamily": "Poppins, sans-serif",
					"name": "Poppins",
					"slug": "poppins"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Montserrat",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [ "file:./assets/fonts/Montserrat-Variable.woff2" ]
						}
					],
					"fontFamily": "Montserrat, sans-serif",
					"name": "Montserrat",
					"slug": "montserrat"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var:preset|color|base",
			"text": "var:preset|color|contrast"
		},
		"elements": {
			"h2": {
				"typography": {
					"fontSize": "var:preset|font-size|large"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var:preset|font-family|montserrat",
					"fontWeight": "700"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|contrast"
				},
				":hover": {
					"color": {
						"text": "var:preset|color|orange"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"button": {
				"color": {
					"text": "var:preset|color|base",
					"background": "var:preset|color|contrast"
				},
				"typography": {
					"textTransform": "uppercase"
				}
			}
		},
		"blocks": {
			"core/image": {
				"border": {
					"radius": "1rem"
				}
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|poppins",
			"fontWeight": "300"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	]
}
